# ================================
# Server Configuration
# ================================
NODE_ENV=development
PORT=5002

# ================================
# Database Configuration
# ================================
# PostgreSQL connection string for Prisma
DATABASE_URL="postgresql://postgres:Test@123@localhost:5432/document_dev?schema=public"

# Individual PostgreSQL settings (used by pg pool)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=database_name
POSTGRES_USER=username
POSTGRES_PASSWORD=password

# ================================
# File Upload Configuration
# ================================
# Base directory for all uploads (relative or absolute path)
FILE_UPLOAD_DIR=uploads

# Temp directory for initial uploads (relative to FILE_UPLOAD_DIR)
FILE_TEMP_DIR=uploads/temp

# Permanent directory for finalized documents (relative to FILE_UPLOAD_DIR)
FILE_PERMANENT_DIR=uploads/permanent

# Maximum file size in bytes (default: 5MB = 5242880)
MAX_FILE_SIZE=5242880
MAX_SIZE_READABLE=5 MB

# Base URL for file access - frontend uses this + fileUrl to view/download files
# Local: http://localhost:3005/api/v1/documents-management/files
# Production: https://api.example.com/api/v1/documents-management/files
# CDN: https://cdn.example.com/files
FILE_BASE_URL=http://localhost:3005/api/v1/documents-management/files

# ================================
# Temp File Cleanup Configuration
# ================================
# Enable/disable automatic temp file cleanup (default: true)
TEMP_CLEANUP_ENABLED=true

# Cron schedule for cleanup job (default: every hour)
TEMP_CLEANUP_CRON=0 * * * *

# Max age in hours before temp files are deleted (default: 24)
TEMP_CLEANUP_MAX_AGE_HOURS=24

# ================================
# Virus Scanning Configuration
# ================================
# Enable/disable virus scanning (default: true)
# If ClamAV is not available, uploads will proceed without scanning
VIRUS_SCAN_ENABLED=true

# ClamAV daemon settings (clamd)
CLAMAV_HOST=127.0.0.1
CLAMAV_PORT=3310
CLAMAV_TIMEOUT=60000

# Path to clamscan binary (fallback if clamd unavailable)
CLAMSCAN_PATH=/usr/bin/clamscan

# Directory for quarantined infected files
QUARANTINE_DIR=uploads/quarantine